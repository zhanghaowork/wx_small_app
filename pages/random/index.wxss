.page {
  min-height: 100vh;
  background: #f3f3f3;
  padding: 20rpx 20rpx 180rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 50rpx;
  color: #8c8f93;
  font-weight: 700;
  margin: 18rpx 8rpx;
}

.card {
  background: #fff;
  border-radius: 18rpx;
  overflow: hidden;
  margin-bottom: 18rpx;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 26rpx 22rpx;
}

.label {
  font-size: 48rpx;
  color: #555;
  font-weight: 600;
}

.value-input,
.picker-text {
  width: 60%;
  text-align: right;
  font-size: 46rpx;
  color: #b4b7bb;
}

.divider {
  height: 2rpx;
  background: #eceef0;
  margin: 0 20rpx;
}

.player-row {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 2rpx solid #f1f1f1;
}

.order {
  width: 156rpx;
  font-size: 44rpx;
  color: #555;
  font-weight: 600;
}

.gender {
  width: 62rpx;
  height: 62rpx;
  line-height: 62rpx;
  text-align: center;
  border-radius: 12rpx;
  color: #fff;
  font-size: 38rpx;
  margin-right: 16rpx;
}

.male {
  background: #5ca8f7;
}

.female {
  background: #ff6f91;
}

.player-input {
  flex: 1;
  font-size: 42rpx;
  color: #333;
  margin-right: 12rpx;
}

.delete-btn {
  margin: 0;
  background: #ff1f1f;
  color: #fff;
  font-size: 34rpx;
  border-radius: 14rpx;
  padding: 0 14rpx;
  line-height: 54rpx;
  height: 54rpx;
  min-width: 96rpx;
}

.actions {
  display: flex;
  gap: 14rpx;
  padding: 20rpx;
}

.batch-btn,
.add-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 12rpx;
  font-size: 40rpx;
  font-weight: 600;
}

.batch-btn {
  border: 2rpx solid #07c160;
  color: #07c160;
  background: #fff;
}

.add-btn {
  border: 2rpx solid #3f95f6;
  color: #2b84eb;
  background: #fff;
}

.rounds-card {
  padding: 20rpx;
}

.rounds-tip {
  display: block;
  font-size: 35rpx;
  color: #81858a;
  line-height: 1.5;
  margin-bottom: 14rpx;
}

.rule-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.rule-item {
  font-size: 34rpx;
  padding: 12rpx 16rpx;
  border-radius: 10rpx;
  background: #edf1f6;
  color: #444;
}

.rule-item-active {
  background: #2f89f6;
  color: #fff;
}

.error {
  margin: 0 6rpx 16rpx;
  color: #d63f2f;
  font-size: 34rpx;
}

.batch-panel {
  position: fixed;
  inset: 0;
  z-index: 100;
}

.panel-mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.42);
}

.panel-body {
  position: absolute;
  left: 20rpx;
  right: 20rpx;
  bottom: 28rpx;
  background: #fff;
  border-radius: 18rpx;
  padding: 20rpx;
}

.panel-title {
  font-size: 42rpx;
  font-weight: 700;
  color: #333;
  margin-bottom: 12rpx;
}

.panel-textarea {
  width: 100%;
  height: 220rpx;
  background: #f5f6f8;
  border-radius: 12rpx;
  padding: 16rpx;
  box-sizing: border-box;
  font-size: 36rpx;
}

.panel-actions {
  margin-top: 14rpx;
  display: flex;
  gap: 14rpx;
}

.panel-cancel,
.panel-ok {
  flex: 1;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 12rpx;
  font-size: 36rpx;
}

.panel-cancel {
  background: #f0f2f5;
  color: #666;
}

.panel-ok {
  background: #2f89f6;
  color: #fff;
}

.schedule {
  margin-top: 8rpx;
}

.summary {
  background: #fff;
  border-radius: 14rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 14rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx 20rpx;
  font-size: 34rpx;
  color: #444;
}

.match-card {
  padding: 18rpx 20rpx;
}

.score-toolbar {
  padding: 14rpx 18rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.score-tip {
  font-size: 30rpx;
  color: #6d7278;
}

.score-actions {
  display: flex;
  gap: 10rpx;
}

.toolbar-btn {
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 18rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.print-btn {
  background: #22b35f;
  color: #fff;
}

.share-btn {
  background: #fff;
  color: #22b35f;
  border: 2rpx solid #22b35f;
}

.score-card {
  padding: 16rpx;
}

.score-line {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.team-col {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  width: 23%;
}

.player-tag {
  background: #69a8ec;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
  font-size: 30rpx;
  line-height: 52rpx;
}

.score-center {
  width: 52%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 14rpx;
}

.score-input {
  width: 84rpx;
  text-align: center;
  font-size: 64rpx;
  font-weight: 700;
  color: #111;
  border-bottom: 2rpx solid #dbe2ea;
}

.vs-big {
  font-size: 58rpx;
  font-weight: 700;
  color: #000;
}

.match-head {
  font-size: 40rpx;
  font-weight: 700;
  color: #222;
  margin-bottom: 10rpx;
}

.teams {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 36rpx;
  color: #333;
}

.vs {
  color: #2f89f6;
  font-weight: 700;
}

.rest {
  margin-top: 10rpx;
  font-size: 32rpx;
  color: #81858a;
}

.rank-card {
  padding: 12rpx 14rpx 6rpx;
}

.rank-header,
.rank-row {
  display: grid;
  grid-template-columns: 110rpx 1fr 120rpx 120rpx 120rpx;
  align-items: center;
  border-bottom: 2rpx solid #eef1f6;
  padding: 12rpx 10rpx;
  border-radius: 12rpx;
}

.rank-col {
  text-align: center;
  font-size: 28rpx;
}

.rank-col-name {
  text-align: left;
}

.rank-header .rank-col {
  color: #7a7f86;
  font-weight: 700;
}

.rank-row {
  margin-top: 10rpx;
  border-bottom: 0;
  background: #fff;
}

.rank-rank-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.medal {
  font-size: 28rpx;
}

.rank-no {
  font-size: 34rpx;
  font-weight: 700;
  color: #4a5568;
}

.rank-num {
  font-weight: 700;
  color: #1e293b;
}

.rank-top1 {
  background: linear-gradient(90deg, #ffe0de 0%, #fff 75%);
}

.rank-top2 {
  background: linear-gradient(90deg, #ffedc9 0%, #fff 75%);
}

.rank-top3 {
  background: linear-gradient(90deg, #d9e8ff 0%, #fff 75%);
}

.bottom-safe {
  height: 108rpx;
}

.fixed-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 14rpx 20rpx 20rpx;
  background: #fff;
  z-index: 99;
  border-top: 2rpx solid #eceef1;
}

.generate-btn {
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  border-radius: 12rpx;
  background: #2687f4;
  color: #fff;
  font-size: 42rpx;
  font-weight: 700;
}

/* UI Polish */
.page {
  background: #f4f6fb;
}

.section-title {
  font-size: 36rpx;
  color: #2f3a4a;
  margin: 14rpx 6rpx;
}

.card,
.summary {
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(30, 64, 175, 0.06);
}

.player-input,
.value-input,
.panel-textarea,
.score-input {
  background: #f8faff;
  border-radius: 12rpx;
}

.rule-item-active,
.generate-btn {
  background: linear-gradient(135deg, #4f7ef5 0%, #6956d6 100%);
}

.batch-btn,
.add-btn,
.delete-btn {
  border-radius: 12rpx;
}

/* Typography Normalize */
.label,
.order,
.mode-title,
.match-head {
  font-size: 30rpx;
  font-weight: 600;
}

.value-input,
.picker-text,
.player-input,
.mode-line,
.rounds-tip,
.rule-item,
.summary text,
.score-tip,
.rest,
.rank-col,
.panel-textarea,
.panel-cancel,
.panel-ok {
  font-size: 26rpx;
}

.batch-btn,
.add-btn,
.delete-btn,
.generate-btn {
  font-size: 28rpx;
  font-weight: 600;
}
