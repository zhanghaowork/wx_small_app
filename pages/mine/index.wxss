.page {
  min-height: 100vh;
  background: #eef2ff;
  padding: 22rpx 20rpx 30rpx;
  box-sizing: border-box;
}

.card {
  background: #fff;
  border-radius: 18rpx;
}

.top-bar {
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.header {
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 14rpx;
}

.title {
  text-align: center;
  display: block;
  font-size: 44rpx;
  font-weight: 700;
  color: #111;
}

.hero-card {
  border-radius: 22rpx;
  padding: 28rpx;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #5f7ef6 0%, #7b4dc8 100%);
}

.hero-icon {
  display: block;
  text-align: center;
  font-size: 56rpx;
}

.hero-title {
  display: block;
  text-align: center;
  font-size: 44rpx;
  font-weight: 700;
  color: #fff;
  margin-top: 10rpx;
}

.hero-sub {
  display: block;
  text-align: center;
  font-size: 29rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 8rpx;
}

.header-title {
  font-size: 36rpx;
  color: #1f1f1f;
  font-weight: 700;
}

.clear-btn {
  margin: 0;
  width: 140rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  color: #fff;
  background: #df6a5d;
  padding: 0;
}

.empty {
  margin-top: 24rpx;
  padding: 36rpx 24rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #666;
  line-height: 1.6;
}

.record-card {
  margin-top: 20rpx;
  background: #fff;
  border-radius: 18rpx;
  padding: 20rpx;
}

.record-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.mode-wrap {
  display: flex;
  align-items: center;
}

.mode-icon {
  font-size: 30rpx;
  margin-right: 10rpx;
}

.mode {
  font-size: 34rpx;
  color: #111;
  font-weight: 700;
}

.time {
  font-size: 24rpx;
  color: #777;
}

.line {
  display: block;
  font-size: 28rpx;
  color: #333;
  line-height: 1.65;
}
