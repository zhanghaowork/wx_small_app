.page {
  min-height: 100vh;
  background: #f3f4f6;
  padding: 20rpx 20rpx 180rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 46rpx;
  color: #7f8388;
  font-weight: 700;
  margin: 16rpx 8rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 18rpx 20rpx;
  margin-bottom: 16rpx;
}

.rule-card text {
  display: block;
  font-size: 34rpx;
  color: #444;
  line-height: 1.6;
}

.config-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.config-row:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
}

.stepper {
  display: flex;
  align-items: center;
}

.step-btn {
  width: 66rpx;
  height: 66rpx;
  line-height: 66rpx;
  padding: 0;
  border-radius: 10rpx;
  background: #eef1f4;
  color: #444;
  font-size: 42rpx;
}

.step-value {
  width: 72rpx;
  text-align: center;
  font-size: 36rpx;
  color: #222;
  font-weight: 700;
}

.score-options {
  display: flex;
  gap: 10rpx;
}

.option {
  font-size: 30rpx;
  padding: 8rpx 16rpx;
  border-radius: 10rpx;
  background: #edf1f6;
  color: #455;
}

.option.active {
  background: #4bcb52;
  color: #fff;
}

.hint {
  display: block;
  font-size: 30rpx;
  color: #7a7f85;
  line-height: 1.5;
  margin-bottom: 10rpx;
}

.input-label {
  display: block;
  font-size: 34rpx;
  color: #333;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}

.textarea {
  width: 100%;
  height: 120rpx;
  background: #f5f6f8;
  border-radius: 12rpx;
  padding: 14rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}

.error {
  margin: 0 8rpx 10rpx;
  color: #d73a3a;
  font-size: 32rpx;
}

.summary {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx 20rpx;
}

.summary text {
  font-size: 32rpx;
  color: #444;
}

.segment-card {
  padding: 16rpx 18rpx;
}

.seg-title {
  font-size: 35rpx;
  color: #222;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.seg-line {
  font-size: 31rpx;
  color: #444;
  line-height: 1.6;
}

.swap-title {
  font-size: 35rpx;
  color: #222;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.swap-item {
  border-bottom: 2rpx solid #f0f0f0;
  padding: 10rpx 0;
  font-size: 30rpx;
  color: #444;
  line-height: 1.6;
}

.swap-item:last-child {
  border-bottom: 0;
}

.score-toolbar {
  padding: 14rpx 18rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.score-tip {
  font-size: 30rpx;
  color: #6d7278;
}

.score-actions {
  display: flex;
  gap: 10rpx;
}

.toolbar-btn {
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 18rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.print-btn {
  background: #22b35f;
  color: #fff;
}

.share-btn {
  background: #fff;
  color: #22b35f;
  border: 2rpx solid #22b35f;
}

.score-card {
  padding: 16rpx;
}

.score-line {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.team-col {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  width: 23%;
}

.player-tag {
  background: #69a8ec;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
  font-size: 30rpx;
  line-height: 52rpx;
}

.score-center {
  width: 52%;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 14rpx;
}

.score-input {
  width: 84rpx;
  text-align: center;
  font-size: 64rpx;
  font-weight: 700;
  color: #111;
  border-bottom: 2rpx solid #dbe2ea;
}

.vs-big {
  font-size: 58rpx;
  font-weight: 700;
  color: #000;
}

.rank-card {
  padding: 12rpx 14rpx 6rpx;
}

.rank-header,
.rank-row {
  display: grid;
  grid-template-columns: 110rpx 1fr 120rpx 120rpx 120rpx;
  align-items: center;
  border-bottom: 2rpx solid #eef1f6;
  padding: 12rpx 10rpx;
  border-radius: 12rpx;
}

.rank-col {
  text-align: center;
  font-size: 28rpx;
}

.rank-col-name {
  text-align: left;
}

.rank-header .rank-col {
  color: #7a7f86;
  font-weight: 700;
}

.rank-row {
  margin-top: 10rpx;
  border-bottom: 0;
  background: #fff;
}

.rank-rank-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.medal {
  font-size: 28rpx;
}

.rank-no {
  font-size: 34rpx;
  font-weight: 700;
  color: #4a5568;
}

.rank-num {
  font-weight: 700;
  color: #1e293b;
}

.rank-top1 {
  background: linear-gradient(90deg, #ffe0de 0%, #fff 75%);
}

.rank-top2 {
  background: linear-gradient(90deg, #ffedc9 0%, #fff 75%);
}

.rank-top3 {
  background: linear-gradient(90deg, #d9e8ff 0%, #fff 75%);
}

.bottom-safe {
  height: 108rpx;
}

.fixed-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 14rpx 20rpx 20rpx;
  background: #fff;
  z-index: 99;
  border-top: 2rpx solid #eceef1;
}

.generate-btn {
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  border-radius: 12rpx;
  background: #4bcb52;
  color: #fff;
  font-size: 38rpx;
  font-weight: 700;
}

/* UI Polish */
.page {
  background: #f4f6fb;
}

.section-title {
  font-size: 36rpx;
  color: #2f3a4a;
  margin: 14rpx 6rpx;
}

.card,
.summary {
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(30, 64, 175, 0.06);
}

.textarea,
.score-input {
  background: #f8faff;
  border-radius: 12rpx;
}

.option.active,
.generate-btn {
  background: linear-gradient(135deg, #4f7ef5 0%, #6956d6 100%);
}

/* Typography Normalize */
.section-title,
.seg-title,
.swap-title {
  font-size: 30rpx;
  font-weight: 700;
}

.rule-card text,
.label,
.hint,
.input-label,
.textarea,
.summary text,
.seg-line,
.swap-item,
.score-tip,
.rank-col {
  font-size: 26rpx;
}

.generate-btn {
  font-size: 28rpx;
  font-weight: 700;
}
