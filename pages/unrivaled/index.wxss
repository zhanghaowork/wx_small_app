.page {
  min-height: 100vh;
  background: #f3f4f6;
  padding: 20rpx 20rpx 180rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 46rpx;
  color: #7f8388;
  font-weight: 700;
  margin: 16rpx 8rpx;
}

.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 18rpx 20rpx;
  margin-bottom: 16rpx;
}

.rule-card text {
  display: block;
  font-size: 34rpx;
  color: #444;
  line-height: 1.6;
}

.config-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.config-row:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
}

.stepper {
  display: flex;
  align-items: center;
}

.step-btn {
  width: 66rpx;
  height: 66rpx;
  line-height: 66rpx;
  padding: 0;
  border-radius: 10rpx;
  background: #eef1f4;
  color: #444;
  font-size: 42rpx;
}

.step-value {
  width: 72rpx;
  text-align: center;
  font-size: 36rpx;
  color: #222;
  font-weight: 700;
}

.score-options {
  display: flex;
  gap: 10rpx;
}

.option {
  font-size: 30rpx;
  padding: 8rpx 16rpx;
  border-radius: 10rpx;
  background: #edf1f6;
  color: #455;
}

.option.active {
  background: #4bcb52;
  color: #fff;
}

.hint {
  display: block;
  font-size: 30rpx;
  color: #7a7f85;
  line-height: 1.5;
  margin-bottom: 10rpx;
}

.input-label {
  display: block;
  font-size: 34rpx;
  color: #333;
  margin-top: 8rpx;
  margin-bottom: 8rpx;
}

.textarea {
  width: 100%;
  height: 120rpx;
  background: #f5f6f8;
  border-radius: 12rpx;
  padding: 14rpx;
  box-sizing: border-box;
  font-size: 32rpx;
}

.error {
  margin: 0 8rpx 10rpx;
  color: #d73a3a;
  font-size: 32rpx;
}

.summary {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx 20rpx;
}

.summary text {
  font-size: 32rpx;
  color: #444;
}

.segment-card {
  padding: 16rpx 18rpx;
}

.seg-title {
  font-size: 35rpx;
  color: #222;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.seg-line {
  font-size: 31rpx;
  color: #444;
  line-height: 1.6;
}

.swap-title {
  font-size: 35rpx;
  color: #222;
  font-weight: 700;
  margin-bottom: 8rpx;
}

.swap-item {
  border-bottom: 2rpx solid #f0f0f0;
  padding: 10rpx 0;
  font-size: 30rpx;
  color: #444;
  line-height: 1.6;
}

.swap-item:last-child {
  border-bottom: 0;
}

.bottom-safe {
  height: 108rpx;
}

.fixed-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 14rpx 20rpx 20rpx;
  background: #fff;
  border-top: 2rpx solid #eceef1;
}

.generate-btn {
  width: 100%;
  height: 92rpx;
  line-height: 92rpx;
  border-radius: 12rpx;
  background: #4bcb52;
  color: #fff;
  font-size: 38rpx;
  font-weight: 700;
}
