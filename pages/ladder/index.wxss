.page {
  min-height: 100vh;
  background: #f4f6fb;
  padding: 22rpx 20rpx 160rpx;
  box-sizing: border-box;
}

.section-title {
  font-size: 32rpx;
  color: #222;
  font-weight: 700;
  margin: 10rpx 0 10rpx;
}

.card {
  background: #fff;
  border-radius: 18rpx;
  padding: 18rpx;
  margin-bottom: 14rpx;
}

.row {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.label {
  color: #333;
  font-size: 28rpx;
  width: 140rpx;
}

.value-input,
.picker-text {
  flex: 1;
  font-size: 28rpx;
  color: #111;
  text-align: right;
}

.divider {
  height: 1rpx;
  background: #eef0f6;
  margin: 14rpx 0;
}

.pair-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.challenger-row:last-child {
  margin-bottom: 0;
}

.player-input {
  flex: 1;
  height: 68rpx;
  border-radius: 12rpx;
  background: #f6f8ff;
  padding: 0 16rpx;
  font-size: 28rpx;
  color: #111;
}

.pair-vs {
  width: 40rpx;
  text-align: center;
  color: #666;
  font-size: 30rpx;
  font-weight: 700;
}

.delete-btn {
  margin: 0 0 0 10rpx;
  height: 58rpx;
  line-height: 58rpx;
  border-radius: 29rpx;
  padding: 0 20rpx;
  background: #ffe4e1;
  color: #d83c2f;
  font-size: 24rpx;
}

.add-btn {
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 12rpx;
  background: #ecf1ff;
  color: #2f5de0;
  font-size: 28rpx;
  font-weight: 600;
}

.challenger-actions {
  display: flex;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.challenger-actions .add-btn {
  flex: 1;
  margin-top: 0;
}

.batch-btn {
  flex: 1;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 12rpx;
  background: #fff5df;
  color: #9c5900;
  font-size: 28rpx;
  font-weight: 600;
}

.score-row {
  display: flex;
  align-items: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid #eff1f7;
}

.score-row:last-child {
  border-bottom: 0;
}

.head {
  padding-top: 0;
}

.col {
  font-size: 26rpx;
  color: #333;
}

.col-match {
  flex: 1;
  padding-right: 12rpx;
}

.col-score {
  width: 108rpx;
  text-align: center;
}

.match-text {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  line-height: 1.5;
}

.vs {
  margin: 0 8rpx;
  color: #7a7a7a;
}

.score-input {
  height: 58rpx;
  border-radius: 10rpx;
  background: #f7f9ff;
}

.error {
  margin: 8rpx 0 14rpx;
  color: #d03b2f;
  font-size: 26rpx;
}

.summary-card text {
  display: block;
  font-size: 28rpx;
  color: #2c2c2c;
  line-height: 1.75;
}

.rank-card {
  overflow: hidden;
  padding: 12rpx 14rpx 6rpx;
}

.rank-header,
.rank-row {
  display: grid;
  grid-template-columns: 110rpx 1fr 110rpx 110rpx 110rpx;
  column-gap: 8rpx;
  align-items: center;
  border-bottom: 1rpx solid #edf0f7;
  padding: 12rpx 10rpx;
  border-radius: 12rpx;
}

.rank-col {
  text-align: center;
  font-size: 26rpx;
}

.rank-col-name {
  text-align: left;
}

.rank-header {
  color: #7a7f86;
  font-weight: 700;
}

.rank-row {
  margin-top: 10rpx;
  border-bottom: 0;
  background: #fff;
}

.rank-rank-wrap {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 6rpx;
}

.medal {
  font-size: 28rpx;
}

.rank-no {
  font-size: 34rpx;
  font-weight: 700;
  color: #4a5568;
}

.rank-num {
  font-weight: 700;
  color: #1e293b;
}

.rank-top1 {
  background: linear-gradient(90deg, #ffe0de 0%, #fff 75%);
}

.rank-top2 {
  background: linear-gradient(90deg, #ffedc9 0%, #fff 75%);
}

.rank-top3 {
  background: linear-gradient(90deg, #d9e8ff 0%, #fff 75%);
}

.fixed-footer {
  position: fixed;
  left: 20rpx;
  right: 20rpx;
  bottom: 20rpx;
  z-index: 10;
}

.generate-btn {
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  color: #fff;
  font-size: 34rpx;
  font-weight: 700;
  background: #2563eb;
}

.bottom-safe {
  height: 120rpx;
}

.batch-panel {
  position: fixed;
  inset: 0;
  z-index: 30;
}

.panel-mask {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.36);
}

.panel-body {
  position: absolute;
  left: 20rpx;
  right: 20rpx;
  bottom: 24rpx;
  background: #fff;
  border-radius: 18rpx;
  padding: 20rpx;
}

.panel-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1b1d22;
}

.panel-textarea {
  margin-top: 14rpx;
  width: 100%;
  min-height: 260rpx;
  background: #f6f8ff;
  border-radius: 12rpx;
  padding: 16rpx;
  box-sizing: border-box;
  font-size: 28rpx;
  color: #1f2937;
}

.panel-actions {
  margin-top: 14rpx;
  display: flex;
  gap: 12rpx;
}

.panel-cancel,
.panel-ok {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 600;
}

.panel-cancel {
  background: #eef1f7;
  color: #445;
}

.panel-ok {
  background: #2f5de0;
  color: #fff;
}

/* UI Polish */
.section-title {
  color: #2f3a4a;
}

.card {
  border-radius: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(30, 64, 175, 0.06);
}

.player-input,
.panel-textarea,
.score-input {
  background: #f8faff;
}

.generate-btn {
  background: linear-gradient(135deg, #4f7ef5 0%, #6956d6 100%);
}

/* Typography Normalize */
.section-title {
  font-size: 30rpx;
}

.label,
.player-input,
.pair-vs,
.batch-btn,
.add-btn,
.score-row .col,
.summary-card text,
.rank-col,
.panel-textarea,
.panel-cancel,
.panel-ok {
  font-size: 26rpx;
}
