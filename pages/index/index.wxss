.page {
  min-height: 100vh;
  background: #f4f6fb;
  padding: 24rpx 20rpx 32rpx;
  box-sizing: border-box;
}

.notice-bar {
  margin-bottom: 18rpx;
  padding: 18rpx 20rpx;
  border-radius: 16rpx;
  background: #fff7df;
  display: flex;
  align-items: center;
}

.notice-icon {
  font-size: 34rpx;
  margin-right: 12rpx;
}

.notice-text {
  flex: 1;
  font-size: 30rpx;
  color: #9c5900;
}

.notice-close {
  font-size: 42rpx;
  line-height: 1;
  color: #d37b00;
  padding-left: 14rpx;
}

.create-btn {
  margin: 24rpx 0 18rpx;
  height: 86rpx;
  line-height: 86rpx;
  border-radius: 43rpx;
  color: #fff;
  font-weight: 700;
  font-size: 36rpx;
  background: #5f7ef6;
  box-shadow: 0 12rpx 24rpx rgba(95, 126, 246, 0.22);
}

.mode-section-title {
  font-size: 34rpx;
  color: #333;
  margin: 6rpx 0 12rpx;
  font-weight: 700;
}

.module-switch {
  display: flex;
  background: #fff;
  border-radius: 16rpx;
  padding: 8rpx;
  margin-bottom: 14rpx;
}

.module-item {
  flex: 1;
  text-align: center;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 12rpx;
  font-size: 30rpx;
  color: #666;
  font-weight: 600;
}

.module-item-active {
  background: #e9efff;
  color: #2b55d9;
}

.empty-card {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 14rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #777;
}

.mode-card {
  background: #fff;
  border-radius: 22rpx;
  padding: 24rpx;
  margin-bottom: 14rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.mode-left {
  width: 76%;
  display: flex;
  align-items: flex-start;
}

.mode-icon-wrap {
  width: 62rpx;
  height: 62rpx;
  border-radius: 16rpx;
  background: #edf0ff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 12rpx;
}

.mode-icon {
  color: #5f7ef6;
  font-size: 28rpx;
  font-weight: 700;
}

.mode-texts {
  flex: 1;
}

.mode-title {
  display: block;
  font-size: 36rpx;
  color: #111;
  font-weight: 700;
  margin-bottom: 6rpx;
}

.mode-line {
  display: block;
  font-size: 27rpx;
  color: #353535;
  line-height: 1.4;
}

.mode-right {
  width: 22%;
  display: flex;
  justify-content: center;
}

.start-btn {
  width: 128rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 32rpx;
  color: #fff;
  font-size: 28rpx;
  font-weight: 700;
  padding: 0;
}

.btn-yellow {
  background: #2563eb;
}

.btn-blue {
  background: #4f46e5;
}

.btn-green {
  background: #7c3aed;
}

.btn-red {
  background: #dc2626;
}

.btn-orange {
  background: #ea580c;
}

.btn-gray {
  background: #9aa0ad;
}
