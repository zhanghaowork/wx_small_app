<view class="page">
  <view class="top-bar">
    <text class="title">羽毛球助手</text>
  </view>

  <view class="mode-card" wx:for="{{modeCards}}" wx:key="id">
    <view class="mode-left">
      <text class="mode-title">{{item.title}}</text>
      <text class="mode-line">{{item.desc1}}</text>
      <text class="mode-line">{{item.desc2}}</text>
    </view>
    <view class="mode-right">
      <button class="start-btn {{item.buttonClass}}" data-url="{{item.url}}" bindtap="startMode">发起</button>
    </view>
  </view>
</view>
